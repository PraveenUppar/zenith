{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext" /* or "commonjs" if you remove "type": "module" from package.json */,
    "rootDir": "./src" /* This tells TS: "Files for THIS app are in ./src" */,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
